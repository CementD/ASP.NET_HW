@page
@model ModalWork1309.Pages.ProfileModel
@{
}

<h2 class="text-3xl font-bold mb-8 text-center">User Profile</h2>

<div class="max-w-4xl mx-auto px-4">
    <form method="post" class="bg-white shadow-lg rounded-lg p-6 space-y-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="flex flex-col">
                <label asp-for="Name" class="text-gray-700 font-semibold mb-2"></label>
                <input asp-for="Name" class="border rounded-lg py-2 px-3 w-full transition duration-300 focus:outline-none focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="Name" class="text-red-500 text-sm mt-1"></span>
            </div>

            <div class="flex flex-col">
                <label asp-for="Email" class="text-gray-700 font-semibold mb-2"></label>
                <input asp-for="Email" class="border rounded-lg py-2 px-3 w-full transition duration-300 focus:outline-none focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="Email" class="text-red-500 text-sm mt-1"></span>
            </div>
        </div>

        <div class="flex flex-col">
            <label asp-for="Bio" class="text-gray-700 font-semibold mb-2"></label>
            <textarea asp-for="Bio" rows="4" class="border rounded-lg py-2 px-3 w-full transition duration-300 focus:outline-none focus:ring-2 focus:ring-blue-500"></textarea>
            <span asp-validation-for="Bio" class="text-red-500 text-sm mt-1"></span>
        </div>

        <div class="flex justify-end">
            <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-6 rounded-lg transition duration-300 w-full md:w-auto">
                Save
            </button>
        </div>
    </form>

    @if (TempData["Message"] != null)
    {
        <div class="mt-6 bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-lg">
            @TempData["Message"]
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}