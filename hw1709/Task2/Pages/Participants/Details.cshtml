@page "{id:int}"
@model Task2.Pages.Participants.DetailsModel
@{
	ViewData["Title"] = "Participant Details";
}

<h1 class="text-2xl font-bold mb-4">Participant: @Model.Participant.Name</h1>
<p>Email: @Model.Participant.Email</p>

<h2 class="text-xl font-bold mt-4">Registered Events:</h2>
<ul>
    @foreach (var ep in Model.Participant.EventParticipants)
    {
        <li>@ep.Event.Title (@ep.Event.Date.ToShortDateString())</li>
    }
</ul>