@page
@model Task2.Pages.Events.IndexModel
@{
	ViewData["Title"] = "Events List";
}

<h1 class="text-2xl font-bold mb-4">Events</h1>

<form method="get" class="mb-4 flex gap-2">
    <input type="text" name="SearchString" value="@Model.SearchString"
           placeholder="Search by title or location"
           class="border p-2 rounded w-64" />
    <button type="submit" class="bg-blue-600 px-4 py-2 rounded">Search</button>
</form>

<a asp-page="./Index" asp-route-SortOrder="count_desc" class="text-blue-500">Sort by Participants ↓</a> |
<a asp-page="./Index" asp-route-SortOrder="" class="text-blue-500">Sort by Participants ↑</a>

<table class="w-full border mt-4">
    <thead>
        <tr class="bg-gray-200">
            <th class="p-2">Title</th>
            <th class="p-2">Date</th>
            <th class="p-2">Location</th>
            <th class="p-2">Participants</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var e in Model.Events)
        {
            <tr class="border-t">
                <td class="p-2">@e.Title</td>
                <td class="p-2">@e.Date.ToShortDateString()</td>
                <td class="p-2">@e.Location</td>
                <td class="p-2">
                    <ul>
                        @foreach (var ep in e.EventParticipants)
                        {
                            <li>
                                <a asp-page="/Participants/Details" asp-route-id="@ep.ParticipantId">
                                    @ep.Participant.Name
                                </a>
                            </li>
                        }
                    </ul>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Events.Any())
{
    <p class="mt-4 text-gray-600">No events found.</p>
}

@if (Model.TotalPages > 1)
{
    <div class="mt-4 flex gap-2">
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <a asp-page="./Index"
               asp-route-PageIndex="@i"
               asp-route-SearchName="@Model.SearchString"
               asp-route-SortOrder="@Model.SortOrder"
               class="px-3 py-1 border rounded @(i == Model.PageIndex ? "bg-blue-600 text-black" : "")">
                @i
            </a>
        }
    </div>
}
