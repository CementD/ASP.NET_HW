@page "{id:int}"
@model hw1509.Pages.Students.DeleteModel
@{
    ViewData["Title"] = "Delete Student";
}

<h2 class="text-2xl font-bold mb-6">Delete Student</h2>

<p>Are you sure you want to delete <strong>@Model.Student.FirstName @Model.Student.LastName</strong>?</p>

<form method="post" class="mt-4">
    <button type="submit" class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded">Delete</button>
    <a asp-page="Index" class="bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded">Cancel</a>
</form>
