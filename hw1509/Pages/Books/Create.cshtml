@page
@model hw1509.Pages.Books.CreateModel
@{
    ViewData["Title"] = "Add Book";
}

<h1 class="text-3xl font-bold mb-6">Add Book</h1>

<form method="post" class="space-y-4">
    <div>
        <label asp-for="Book.Title" class="block font-medium mb-1"></label>
        <input asp-for="Book.Title" class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" />
        <span asp-validation-for="Book.Title" class="text-red-500 text-sm"></span>
    </div>

    <div>
        <label asp-for="Book.Author" class="block font-medium mb-1"></label>
        <input asp-for="Book.Author" class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" />
        <span asp-validation-for="Book.Author" class="text-red-500 text-sm"></span>
    </div>

    <div>
        <label asp-for="Book.Year" class="block font-medium mb-1"></label>
        <input asp-for="Book.Year" class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" />
        <span asp-validation-for="Book.Year" class="text-red-500 text-sm"></span>
    </div>

    <div class="flex space-x-3 mt-4">
        <button type="submit" class="bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded font-medium">Save</button>
        <a asp-page="Index" class="bg-gray-300 hover:bg-gray-400 text-gray-800 px-4 py-2 rounded font-medium">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
