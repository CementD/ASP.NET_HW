@page
@model hw1509.Pages.Books.IndexModel
@{
    ViewData["Title"] = "Books";
}

<h1 class="text-3xl font-bold mb-6">Books</h1>

<p class="mb-4">
    <a asp-page="Create" class="bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded font-medium">Add New Book</a>
</p>

<table class="min-w-full bg-white shadow-md rounded overflow-hidden">
    <thead class="bg-gray-200">
        <tr>
            <th class="text-left px-4 py-2">Title</th>
            <th class="text-left px-4 py-2">Author</th>
            <th class="text-left px-4 py-2">Year</th>
            <th class="px-4 py-2">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model.Books)
        {
            <tr class="border-t hover:bg-gray-50">
                <td class="px-4 py-2">@book.Title</td>
                <td class="px-4 py-2">@book.Author</td>
                <td class="px-4 py-2">@book.Year</td>
                <td class="px-4 py-2 flex space-x-2 justify-center">
                    <a asp-page="Edit" asp-route-id="@book.Id" class="bg-yellow-400 hover:bg-yellow-500 text-white px-3 py-1 rounded font-medium text-sm">Edit</a>
                    <a asp-page="Delete" asp-route-id="@book.Id" class="bg-red-500 hover:bg-red-600 text-white px-3 py-1 rounded font-medium text-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
