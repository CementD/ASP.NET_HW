<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - hw1009</title>
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
</head>
<body class="bg-gray-100 min-h-screen flex">
    <aside class="w-64 bg-gray-800 text-white p-4">
        <h2 class="text-xl font-bold mb-4">Menu</h2>
        <ul class="space-y-2">
            <li><a asp-page="/Task1" class="block p-2 hover:bg-gray-700 rounded">Task 1</a></li>
            <li><a asp-page="/Task2" class="block p-2 hover:bg-gray-700 rounded">Task 2</a></li>
            <li><a asp-page="/Task3" class="block p-2 hover:bg-gray-700 rounded">Task 3</a></li>
            <li><a asp-page="/Task4" class="block p-2 hover:bg-gray-700 rounded">Task 4</a></li>
            <li><a asp-page="/Task5" class="block p-2 hover:bg-gray-700 rounded">Task 5</a></li>
        </ul>
    </aside>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - hw1009 - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>